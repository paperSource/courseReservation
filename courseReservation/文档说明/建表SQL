---------课程表---------
CREATE TABLE `course` (
  `id` int(20) NOT NULL AUTO_INCREMENT,
  `courseTitle` varchar(100) NOT NULL,
  `classHour` varchar(20) NOT NULL,
  `teacherName` varchar(20) NOT NULL,
  `classify` varchar(20) NOT NULL,
  `classifyNo` varchar(4) NOT NULL,
  `gmt_creat` datetime DEFAULT NULL,
  `gmt_modifed` datetime DEFAULT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=2 DEFAULT CHARSET=utf8

---------用户表---------
CREATE TABLE `users` (
  `id` int(20) NOT NULL AUTO_INCREMENT,
  `usersname` varchar(20) NOT NULL,
  `userspwd` varchar(20) NOT NULL,
  `sex` varchar(4) DEFAULT NULL,
  `age` int(11) DEFAULT NULL,
  `tellphonenum` varchar(20) DEFAULT NULL,
  `gmt_creat` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
  `gmt_modifed` timestamp NOT NULL DEFAULT '0000-00-00 00:00:00',
  `usersState` int(10) DEFAULT NULL,
  `emilCode` varchar(10) DEFAULT NULL,
  `emilName` varchar(50) DEFAULT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=59 DEFAULT CHARSET=utf8

---------主贴表--------
CREATE TABLE `topic` (
  `id` int(10) NOT NULL AUTO_INCREMENT COMMENT '主键',
  `title` varchar(50) NOT NULL COMMENT '帖子标题',
  `content` varchar(3000) NOT NULL COMMENT '帖子内容',
  `TopicStarter` int(20) NOT NULL COMMENT '发帖人',
  `date` date NOT NULL COMMENT '发帖时间',
  `classify` varchar(2) DEFAULT NULL COMMENT '所属分类',
  `browseNum` int(10) DEFAULT NULL COMMENT '浏览量',
  `replyNum` int(10) DEFAULT NULL COMMENT '回帖数量',
  `state` varchar(2) DEFAULT NULL COMMENT '状态',
  `endDate` date DEFAULT NULL COMMENT '最后回帖时间',
  `endUser` int(20) DEFAULT NULL COMMENT '最后回复的用户',
  `upvote` int(10) DEFAULT NULL COMMENT '点赞数量',
  `EXT1` varchar(250) DEFAULT NULL,
  `EXT2` varchar(250) DEFAULT NULL,
  `EXT3` varchar(250) DEFAULT NULL,
  `EXT4` varchar(250) DEFAULT NULL,
  `EXT5` varchar(250) DEFAULT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

---------跟帖表---------
CREATE TABLE `reply` (
  `id` int(10) NOT NULL AUTO_INCREMENT COMMENT '主键',
  `TopicID` int(10) NOT NULL COMMENT '主贴ID',
  `replyID` int(20) NOT NULL COMMENT '回帖人ID',
  `date` date NOT NULL COMMENT '回帖时间',
  `content` varchar(3000) NOT NULL COMMENT '回帖内容',
  `flowers` int(10) DEFAULT NULL COMMENT '送花数量',
  `eggs` int(10) DEFAULT NULL COMMENT '丢蛋数量',
  `state` varchar(2) DEFAULT NULL COMMENT '状态',
  `EXT1` varchar(250) DEFAULT NULL,
  `EXT2` varchar(250) DEFAULT NULL,
  `EXT3` varchar(250) DEFAULT NULL,
  `EXT4` varchar(250) DEFAULT NULL,
  `EXT5` varchar(250) DEFAULT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;